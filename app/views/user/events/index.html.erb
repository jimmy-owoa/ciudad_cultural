<div class="section-header">
  <h1>Eventos</h1>
</div>
<div class="section-body center">
  <div class="card">
    <div class="card-header">
      <h4>Lista de eventos</h4>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-md">
          <tr>
            <th>#</th>
            <th>Titulo</th>
            <th>Fecha del Evento</th>
            <th>Fecha Creaci√≥n</th>
            <th>Acciones</th>
          </tr>
          <% @user_events.each do |user_event| %>
            <tr>
              <td><%= user_event.id %></td>
              <td><%= user_event.title %></td>
              <td><%= user_event.date.strftime("%d/%m/%Y") %></td>
              <td><%= user_event.created_at.strftime("%d/%m/%Y") %></td>
              <td><%= link_to 'Ver', user_event, class: 'btn btn-success' %>
              <%= link_to 'Editar', edit_user_event_path(user_event), class: 'btn btn-primary' %>
              <%= link_to 'Eliminar', user_event, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </table>
        <%= link_to 'Nuevo evento', new_user_event_path %>
      </div>
    </div>
  </div>
</div>
