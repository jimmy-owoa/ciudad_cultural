<div class="row align-items-center justify-content-center text-left">
	<div class="col-lg-5 col-sm-12">
		<h1 class="text-uppercase font-weight-bold-max display-4">Plataforma</h1>
		<h5 class="text-uppercase font-italic font-weight-bold text-yellow mb-5">de cultura urbana</h5>
		<p class="font-weight-light">Intervenimos la ciudad, creando un lenguaje narrado y colorido, generando identidad y apropiación por parte de la comunidad, mediante las intervenciones artísticas y culturales. </p>
		<div class="text-center">
			<%= link_to 'Ver más', events_path, class: 'btn btn-primary text-center', style: 'border-radius: 12rem;' %>
		</div>
	</div>
	<div class="col-lg-7 col-sm-6 pt-4">
	<%= image_tag asset_url("header.png"), class: 'img-fluid', style: 'border-radius: 15px 50px;'%>
		<%# border-radius: 15px 50px;  %>
	</div>
</div>
<hr class="divider my-4">
<div class="card pt-2 pb-2">
	<div class="row text-center">
		<div class="col-md-12 display-4 font-weight-bold-max text-uppercase">
			<%= @events.first.title%>
		</div>
		<div class="col-md-12">
			<% if @events.first.main_image.attachment %>
				<%= image_tag @events.first.main_image.variant(resize: "500x"), style:'height: 500px; object-fit: cover;', class: "img-fluid"%>
			<% else %>
				<%= image_tag asset_url("computador.png"), style:'height: 500px; object-fit: cover;'%>
			<% end %>
		</div>
		<div class="col-md-12 pt-2">
			<%= link_to "Mas información aquí", event_path(@events.first.slug), class: 'btn btn-primary' %>
		</div>
	</div>
</div>
<hr class="divider my-4">
<div class="col-lg-12 card pt-2 pb-2">
	<h1 class="text-uppercase text-center font-weight-bold-max display-4">Partitura cultural</h1>
	<div class="row pt-2">
		<% @events.each do |event| %>
			<div class="col-md-4 pt-2">
				<div class="card" style="min-width: 21rem;">
					<div style="text-align: center;">
					<% if event.main_image.attachment %>
						<%= image_tag event.main_image.variant(resize: "x300"), style:'height: 180px; width: 200px; object-fit: cover; align: center;'%>
					<% else %>
						<%= image_tag asset_url("computador.png"), style:'height: 180px; width: 200px; object-fit: cover;'%>
					<% end %>
					</div>
					<div class="card-body">
						<h5 class="card-title"><%= event.title %></h5>
						<p class="card-text"><%= event.description[0..25] + '...' %></p>
						<%= link_to "Ver", event_path(event.slug), class: 'btn btn-primary btn-block' %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>
